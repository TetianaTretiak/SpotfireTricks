from Spotfire.Dxp.Application.Visuals import LineChart
from Spotfire.Dxp.Application.Visuals import AxisRange

for page in Document.Pages:
	if page.Title == "Demographics":
		for v in page.Visuals:
			if v.Title == "Enrollment":
				viz = v.As[LineChart]()
				viz.Data.WhereClauseExpression = "(([Metric]='Enrolled') or ([Metric]='Screened')) and ([Date] is not null)"
				viz.FittingModels[2].Enabled = True
				viz.FittingModels[3].Enabled = True
				viz.XAxis.ZoomRange = AxisRange.DefaultRange
				viz.YAxis.ZoomRange = AxisRange.DefaultRange
