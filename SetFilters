#use this to quickly hide extra filter panels

demographics_filters = ['Study Site Identifier', 'Subject Identifier for the Study', 'Age', 'Sex', 'Race', 'Ethnicity', 'Country', 'Subject Death Flag', 'Description of Planned Arm']
pp_filters = ["Date/Time of Event or Finding", "Name of Treatment", "Reported Term for the Adverse Event", "Dictionary-Derived Term", "Body System or Organ Class", "Action Taken with Study Treatment", 
	"Causality", "Outcome of Adverse Event", "Serious Event", "Results in Death", 'Standard Toxicity Grade', "Reported Name of Drug, Med, or Therapy", "Indication"]

for page in Document.Pages:
	tableGroup = page.FilterPanel.TableGroups
	for t in tableGroup:
#Demographics
		if page.Title == "Demographics":
			if t.Name == "Demographics":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
					if filterHandle.FilterReference.Name not in demographics_filters:
						filterHandle.Visible = 0
					else:
						filterHandle.Visible = 1
		 	elif t.Name == "Screened/Enrolled":
		 		t.Visible = 1
		 		for filterHandle in t.FilterHandles:
		 			if filterHandle.FilterReference.Name not in ['Metric']:
		 				filterHandle.Visible = 0
		 			else:
		 				filterHandle.Visible = 1
			else:
				t.Visible = 0
#populations
		if page.Title == "Populations":
			if t.Name == "Demographics":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
					if filterHandle.FilterReference.Name not in demographics_filters:
						filterHandle.Visible = 0
					else:
						filterHandle.Visible = 1
			else:
				t.Visible = 0
#Disposition
		if page.Title == "Disposition":
			if t.Name == "Demographics":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
					if filterHandle.FilterReference.Name not in demographics_filters:
						filterHandle.Visible = 0
					else:
						filterHandle.Visible = 1
			elif t.Name == "Disposition":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
					if filterHandle.FilterReference.Name not in ['Reported Term for the Disposition Event', 'Standardized Disposition Term', 'Category for Disposition Event']:
				 		filterHandle.Visible = 0
				 	else:
				 		filterHandle.Visible = 1
			else:
				t.Visible = 0
#Adverse Events + Summaries
		if page.Title in ["Adverse Events", "AE Summary Tables (1)", "AE Summary Tables (2)"]:
			if t.Name == "Demographics":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
					if filterHandle.FilterReference.Name not in demographics_filters:
						filterHandle.Visible = 0
					else:
						filterHandle.Visible = 1
			elif t.Name == "Adverse Events":
				t.Visible = 1
				for filterHandle in t.FilterHandles:
				 	if filterHandle.FilterReference.Name not in ['Reported Term for the Adverse Event', 'Dictionary-Derived Term', 'Body System or Organ Class',
				 												'Severity/Intensity', 'Serious Event', 'Action Taken with Study Treatment', 
																'Causality', 'Outcome of Adverse Event', 'Results in Death', 'Standard Toxicity Grade']:
				 		filterHandle.Visible = 0
			else:
				t.Visible = 0
#Patient Profile
